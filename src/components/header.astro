---
import home from "../assets/home.svg";
import person from "../assets/person.svg";
import file from "../assets/file.svg";
---

<header>
  <div class="content">
    <div class="branding">
      <a href=`${import.meta.env.BASE_URL}`>JB</a>
    </div>
    <div class="nav-text">
      <a href=`${import.meta.env.BASE_URL}`>Home</a>
      <a href=`${import.meta.env.BASE_URL}about/`>About</a>
      <a href=`${import.meta.env.BASE_URL}cv/`>CV</a>
    </div>
    <div class="nav-icon">
      <a href=`${import.meta.env.BASE_URL}`><img src={home} alt="" /></a>
      <a href=`${import.meta.env.BASE_URL}about/`><img src={person} alt="" /></a
      >
      <a href=`${import.meta.env.BASE_URL}cv/`><img src={file} alt="" /></a>
    </div>
  </div>
</header>

<style>
  header {
    background-color: var(--baseColor);
    display: flex;
    justify-content: center;
    align-items: center;
  }

  header .content {
    width: var(--content-box__max-width);
    display: flex;
    align-items: center;
  }

  .branding {
    padding: 0 0.5rem;
    font-family: "PT Serif", sans-serif;
  }

  .branding a {
    display: block;
    color: var(--baseColorAccent);
    text-align: center;
    text-decoration: none;
    font-size: 5rem;
    font-weight: bold;
    text-transform: uppercase;
  }

  .nav-text {
    max-width: var(--content-box__max-width);
    display: flex;
    align-items: center;
    justify-content: space-around;
    width: 100%;
    padding: 0 2rem;
  }

  .nav-text a {
    display: block;
    color: var(--baseColorText);
    text-align: center;
    text-decoration: none;
    font-size: 1.2rem;
    font-weight: bold;
    text-transform: uppercase;
  }

  a {
    transition: 0.4s ease-in-out;
  }

  a:hover {
    color: var(--baseColorAccent);
  }

  .nav-icon {
    display: none;
    max-width: var(--content-box__max-width);
    width: 100%;
  }

  @media (max-width: 600px) {
    .nav-icon {
      display: flex;
      align-items: center;
      justify-content: space-around;
    }

    .nav-icon img {
      width: 2rem;
    }

    .nav-text {
      display: none;
    }
  }
</style>
